<div class="container">
    <h1 class="mt-4">ADMIN</h1>
    <p class="lead mb-3">Welcome <%= user.name %></p>
    <a href="/users/logout" class="btn btn-secondary">Logout</a>
</div>

<div class="container" >
    <h1 class="mb-4 mt-4">Create new events</h1>
    <a href="/new" class="btn btn-success">Create</a>
    <% include ./partials/messages %>
    <% events.forEach(event => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title" ><%= event.name %></h4>
          <div class="card-subtitle text-muted mb-2"><%= event.dateTime %></div>
          <div class="card-text mb-2">
            <p>
            <%= event.description %>
          </p></div>
          
          <a href="/edit/<%= event.id %>" class="btn btn-info" >Edit</a>
          <a href="/uploads/<%= event.id %>" class="btn btn-warning" >Upload images</a>
          <!--form action="/events/<%= event.id %>?_method=DELETE" method="POST" class="d-inline" >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form-->
        </div>
      </div>
    <% }) %>
  </div>